---
import Layout from "../layouts/Layout.astro";
import Github from "../components/icons/Github.astro";
import Linkedin from "../components/icons/Linkedin.astro";
import Card from "../components/Card.astro";
import Header from "../components/Header.astro";
import Badge from "../components/Badge.astro";
import Social from "../components/Social.astro";
import Mail from "../components/icons/Mail.astro";
import Work from "../components/icons/Work.astro";
import Experience from "../components/Experience.astro";
import Code from "../components/icons/Code.astro";
import Projects from "../components/Projects.astro";
---

<Layout title="Sebastian Cruz - FullStack developer">
  <main class="px-4">
    <section class="w-full mx-auto lg:w-[740px] pt-20 lg:pt-40">
      <img
        class="rounded-full w-14 h-14 mb-3"
        src="src/assets/sebastian.svg"
        alt="sebastian"
      />

      <h1
        class="text-white text-2xl lg:text-5xl font-bold flex flex-row
			gap-x-4 pb-3"
      >
        Hi, I'm Sebastian
        <a
          href="https://www.linkedin.com/in/sebastiancruzarmas/"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center"
        >
          <Badge>Available for hire</Badge>
        </a>
      </h1>
      <h2>
        <span class="text-indigo-400/100">Full-stack web developer</span> with over
        3 years of experience,
        <span class="text-sky-400/100">based in Veracruz, Mexico.</span>
        <span class="opacity-75"
          >Expert in crafting robust and efficient technological solutions, from
          conception to implementation.</span
        >
      </h2>

      <nav class="flex gap-2 lg:gap-x-2 my-10 flex-wrap">
        <Social href="https://www.linkedin.com/in/sebastiancruzarmas/">
          <Github class="w-6 h-6" />
          GitHub
        </Social>

        <Social href="https://www.linkedin.com/in/sebastiancruzarmas/">
          <Linkedin class="w-6 h-6" />
          LinkedIn
        </Social>

        <Social href="mailto:sebastiandev26@gmail.com">
          <Mail class="w-6 h-6" />
          sebastiandev26@gmail.com
        </Social>
      </nav>
    </section>

    <section id="experience" class="w-full mx-auto lg:w-[740px] pt-20">
      <h2 class="text-2xl font-semibold pb-5 flex gap-x-3 items-center">
        <Work />
        Work experience
      </h2>
      <Experience />
    </section>

    <section id="projects" class="w-full mx-auto lg:w-[740px] pt-20">
      <h2 class="text-2xl font-semibold pb-5 flex gap-x-3 items-center">
        <Code />
        Projects
      </h2>
      <nav class="lg:flex flex-wrap">
        <Projects />
      </nav>
    </section>
  </main>
</Layout>
