---
import Layout from "../layouts/Layout.astro";
import Github from "../components/icons/Github.astro";
import Linkedin from "../components/icons/Linkedin.astro";
import Card from "../components/Card.astro";
import Header from "../components/Header.astro";
import Badge from "../components/Badge.astro";
import Social from "../components/Social.astro";
import Mail from "../components/icons/Mail.astro";
import Work from "../components/icons/Work.astro";
import Experience from "../components/Experience.astro";
import Code from "../components/icons/Code.astro";
import Projects from "../components/Projects.astro";
import ColorBadge from "../components/ColorBadge.astro";
import sebastianImage from '../assets/sebastian4.svg';
---

<Layout title="Sebastian Cruz - FullStack developer">
  <main class="px-4">
    <section class="w-full mx-auto lg:w-[740px] pt-20 lg:pt-40">
      <img
        class="rounded-full w-20 h-20 mb-3"
        src="/images/sebastian4.svg"
        alt="sebastian"
      />

      <h1
        class="text-white text-2xl lg:text-5xl font-bold flex flex-row
			gap-x-4 pb-3"
      >
        Hi, I'm Sebastian
        <a
          href="https://www.linkedin.com/in/sebastiancruzarmas/"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center"
        >
          <Badge>Available for hire</Badge>
        </a>
      </h1>
      <h2>
        <span class="text-indigo-400/100">Full-stack web developer</span> with over
        3 years of experience,
        <span class="text-sky-400/100">based in Veracruz, Mexico.</span>
        <span class="opacity-75"
          >Expert in crafting robust and efficient technological solutions, from
          conception to implementation.</span
        >
      </h2>

      <nav class="flex gap-2 lg:gap-x-2 my-10 flex-wrap">
        <Social href="https://github.com/Sebastuancruz">
          <Github class="w-6 h-6" />
          GitHub
        </Social>

        <Social href="https://www.linkedin.com/in/sebastiancruzarmas/">
          <Linkedin class="w-6 h-6" />
          LinkedIn
        </Social>

        <Social href="mailto:sebastiandev26@gmail.com">
          <Mail class="w-6 h-6" />
          sebastiandev26@gmail.com
        </Social>
      </nav>
    </section>

    <section id="experience" class="w-full mx-auto lg:w-[740px] pt-20">
      <h2 class="text-2xl font-semibold pb-5 flex gap-x-3 items-center">
        <Work />
        Work experience
      </h2>
      <Experience />
    </section>

    <section id="stack" class="w-full  mx-auto lg:w-[740px] pt-10 pb-10">
      <h2 class="text-2xl font-semibold pb-5 flex gap-x-3 items-center">
        <Code />
        TechStack
      </h2>
      <nav class="grid gap-3 lg:grid-cols-7  md:grid-cols-5 sm:grid-cols-4 grid-cols-3">
        <div><ColorBadge backgroudColor="bg-rose-700" textColor="text-white">Java</ColorBadge></div>
        <div><ColorBadge backgroudColor="bg-amber-600" textColor="text-white">JavaScript</ColorBadge></div>
        <div><ColorBadge backgroudColor="bg-blue-700" textColor="text-white">Typescript</ColorBadge></div>
        <div><ColorBadge backgroudColor="bg-red-600" textColor="text-white">Astro</ColorBadge></div>
        <div><ColorBadge backgroudColor="bg-rose-700" textColor="text-white">Angular</ColorBadge></div>
        <div><ColorBadge backgroudColor="bg-blue-500" textColor="text-white">Ionic</ColorBadge></div>
        <div><ColorBadge backgroudColor="bg-rose-900" textColor="text-white">NestJS</ColorBadge></div>
        <div><ColorBadge backgroudColor="bg-green-700" textColor="text-white">SpringBoot</ColorBadge></div>
        <div><ColorBadge backgroudColor="bg-blue-600" textColor="text-white">PostgreSQL</ColorBadge></div>
        <div><ColorBadge backgroudColor="bg-blue-500" textColor="text-white">Docker</ColorBadge></div>
        <div><ColorBadge backgroudColor="bg-gray-900" textColor="text-white">Git + Github</ColorBadge></div>
      </nav>
    </section>

    <section id="projects" class="w-full  mx-auto lg:w-[740px] pt-20 pb-10">
      <h2 class="text-2xl font-semibold pb-5 flex gap-x-3 items-center">
        <Code />
        Projects
      </h2>
      <nav class="grid lg:grid-cols-2 md:grid-cols-2 sm:justify-center gap-4">
        <Projects />
      </nav>
    </section>
  </main>
</Layout>
